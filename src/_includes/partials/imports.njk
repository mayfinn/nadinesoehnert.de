{% macro video(videoId) %}
<div class="wrapper-video" data-js-yt-video-id="{{ videoId }}">
  <div class="wrapper-video__poster" data-js-video-poster>
    <div class="wrapper-video__poster-text">
      <button class="wrapper-video__play-button" data-js-video-init="">
        <img src="images/play.svg" inline>
      </button>
      <h3 class="fs-l">Beamer</h3>
    </div>
    <picture>
      <source srcset="{% srcset 'video-demo.webp' %}" type="image/webp">
      <source srcset="{% srcset 'video-demo.jpg' %}" type="image/jpeg">
      <img src="/images/video-demo-500x.jpg" alt="" class="wrapper-video__poster-image" loading="lazy">
    </picture>
  </div>
</div>
{% endmacro %}